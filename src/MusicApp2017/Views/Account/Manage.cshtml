@model MusicApp2017.Models.ApplicationUser
@{
    ViewData["Title"] = "Profile";
}

<h2>@ViewData["Title"]</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Username:
        </dt>
        <dd>
            @Model.UserName
        </dd>
        <dt>
            Email:
        </dt>
        <dd>
            @Model.Email
        </dd>
        <dt>
            Favorite Genre: 
        </dt>
        <dd>
            @ViewBag.FavGenre
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn-task">Edit Favorite Genre</a>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
