
@model MusicApp2017.Models.Genre
@{
    ViewData["Title"] = "Genres";
}
    <h2>Genres Details</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd>
            @Model.Name
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>Albums List</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var album in Model.Albums)
            {
                <tr>
                    <td class="album-block">
                        @Html.DisplayFor(modelItem => album.Title)
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" class="btn-task" asp-route-id="@Model.GenreID">Edit</a> |
    <a asp-action="Index" class="btn-task">Back to List</a>
</div>